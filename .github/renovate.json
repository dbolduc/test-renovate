{
  "extends": [
    "config:base",
    "docker:disable"
  ],
  "regexManagers": [
    {
      "fileMatch":  [
        ".*\\.Dockerfile$",
        ".*doc/packaging\\.md$"
      ],
      "matchStrings": [
        "https://github\\.com/(?<depName>.*?)/archive/(?<currentValue>.*?)\\.tar\\.gz"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "ignoreDeps": [ "com_google_googleapis" ],
  "postUpgradeTasks": {
    "commands": ["ls > test.txt"],
    "fileFilters": ["**/*.txt"],
    "executionMode": "update"
  }
}
